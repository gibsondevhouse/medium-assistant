{
  "name": "deep-scribe",
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "predev": "npx kill-port 3000 || true",
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:3000 && tsc -p electron && ELECTRON_RUN_AS_NODE= NODE_ENV=development electron .",
    "build": "sh python_backend/build_executable.sh && tsc && tsc -p electron && vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.deepscribe.app",
    "productName": "Deep Scribe",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "extraResources": [
      {
        "from": "python_backend/dist/deep-scribe-backend",
        "to": "deep-scribe-backend"
      }
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@tiptap/extension-placeholder": "^3.14.0",
    "@tiptap/extension-typography": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "clsx": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^12.23.26",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.1.1",
    "reactflow": "^11.11.4",
    "rss-parser": "^3.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-scrollbar": "^3.1.0",
    "tiptap-markdown": "^0.9.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "25.3.1",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "wait-on": "^7.0.1"
  }
}
