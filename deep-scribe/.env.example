VITE_ANTHROPIC_API_KEY=
VITE_PERPLEXITY_API_KEY=
VITE_DEEPSEEK_API_KEY=
VITE_GEMINI_API_KEY=

# --- GNews API (Existing) ---
VITE_GNEWS_API_KEY=your_key_here

# --- Local & Open Source ---
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_LOCAL_MODEL_NAME=llama3

# --- App Configuration ---
# Controls which AI service the app uses by default. 
# Options: openai, anthropic, ollama, deepseek, gemini
VITE_ACTIVE_PROVIDER=gemini

# --- Backend Hardware (Python Only - Do not prefix with VITE) ---
# Comma-separated list of GPU IDs (e.g., 0,1 for multi-gpu)
CUDA_VISIBLE_DEVICES=0
# Explicitly use NVIDIA CUDA cores rather than cpu or mps (Mac)
TORCH_DEVICE=cuda
